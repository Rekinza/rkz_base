$_product=$this->getProduct();
?>
    <!--<h2><?php echo $this->__('Details') ?></h2>-->
    <div class="std">
        <?php /* echo $this->helper('catalog/output')->productAttribute($this->getProduct(), $_description, 'description') */ ?>
        <h2>Condition : </h2>
        <?php echo $_product->getShortDescription();?>
        <p>&nbsp;</p>
        <div class="">
            <ul class="sizing">
				<?php if ($size=$_product->getAttributeText('size')):?>
                <li class="label">Sizing</li>
                <li class="content"><?php echo $size;?></li>
				<?php endif;?>
                <li class="label">Materials</li>
                <li class="content">
				<?php if (!$material=$_product->getMaterial()):?>
						-
					<?php else:?>
					<?php echo $material;?>
					<?php endif;?>
                </li>
				<?php if ($measure=$_product->getMeasurements()):?>
                <li class="label">Measurements</li>
                <li class="content">
                    <div class="measurements">
                        <ul>
							<?php 
					$measure=explode(",",$measure);		
					foreach ($measure as $mea):		
							$mea1=explode(":",$mea);
							if (!$mea1 || !is_array($mea1)){
							continue;
							}
							?>
						<li><?php echo $mea1[0];?></li>
                            <li><?php echo $mea1[1];?></li>
                 
							<?php endforeach;?>
                        </ul>
                    </div>
                    
                </li>
				<?php endif;?>
            </ul>
        </div>
    </div>
    
