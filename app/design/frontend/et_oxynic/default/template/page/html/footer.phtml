		jQuery("#et_backontop").hide();
		jQuery(function () {
			var wh = $(window).height();
			var whtml =  $(document).height();
			$(window).scroll(function () {
				if ($(this).scrollTop() > whtml/10) {
					$('#et_backontop').fadeIn();
				} else {
					$('#et_backontop').fadeOut();
				}
			});
			jQuery('#et_backontop').click(function () {
				jQuery('body,html').animate({
					scrollTop: 0
				}, 800);
				return false;
			});
		});
	});
</script>

