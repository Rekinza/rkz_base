<?xml version="1.0"?>
<config>
	<modules>
		<ET_Carousel>
			<version>1.0.0</version>
		</ET_Carousel>
	</modules>
	<global>
		<models>
			<carousel>
				<class>ET_Carousel_Model</class>
			</carousel>
			<catalog_resource>
				<rewrite>
					<product_collection>ET_Carousel_Model_Resource_Product_Collection</product_collection>
				</rewrite>
			</catalog_resource>
		</models>
		<blocks>
			<carousel>
				<class>ET_Carousel_Block</class>
			</carousel>
		</blocks>
		<helpers>
			<carousel>
				<class>ET_Carousel_Helper</class>
			</carousel>
		</helpers>
		<resources>
			<et_carousel_setup>
				<setup>
					<module>ET_Carousel</module>
				</setup>
				<connection>
					<use>core_setup</use>
				</connection>
			</et_carousel_setup>
		</resources>
	</global>
	<frontend>
		<routers>
			<carousel>
				<use>standard</use>
				<args>
					<module>ET_Carousel</module>
					<frontName>carousel</frontName>
				</args>
			</carousel>
		</routers>
		<layout>
			<updates>
				<carousel>
					<file>et/carousel.xml</file>
				</carousel>
			</updates>
		</layout>
	</frontend>
	<default>
		<et_carousel_configs>
			<general>
				<block_id/>
				<block_title/>
			</general>
			<responsive>
				<col_lg>4</col_lg>
				<col_md/>
				<col_sm/>
				<col_xs/>
			</responsive>
			<resources>
				<data_source>catalog_category</data_source>
				<product_skus/>
				<catalog_category>*</catalog_category>
				<child_category_include>0</child_category_include>
				<include_max_depth>1</include_max_depth>
				<is_new_filter>0</is_new_filter>
				<is_special_filter>0</is_special_filter>
				<is_featured>0</is_featured>
				<order_by>name</order_by>
				<order_dir>ASC</order_dir>
				<product_count>8</product_count>
			</resources>
			<product_renderer>
				<show_title>1</show_title>
				<title_truncate/>
				<show_description>1</show_description>
				<description_truncate/>
				<show_image>1</show_image>
				<image_source>small_image</image_source>
				<image_size>270</image_size>
				<show_add2cart>1</show_add2cart>
				<show_add2wishlist>1</show_add2wishlist>
				<show_add2compare>1</show_add2compare>
				<show_quickview>1</show_quickview>
				<show_pricebox>1</show_pricebox>
				<show_rattingbox>1</show_rattingbox>
			</product_renderer>
			
		</et_carousel_configs>
	</default>
</config>
